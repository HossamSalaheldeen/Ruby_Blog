<h1 class="alert alert-info">Article Details</h1>
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
 
<h2 class="alert alert-dark">Comments</h2>
<%= render @article.comments %>
 
<h4 class="alert alert-secondary">Add a comment:</h4>
<%= render 'comments/form' %>
<% if can? :update, @article %>
  <%= link_to 'Edit', edit_article_path(@article) %>
| <% end %>
<%= link_to 'Back', articles_path %>